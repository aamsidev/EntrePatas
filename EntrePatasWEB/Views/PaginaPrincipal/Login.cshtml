@model EntrePatasWEB.Models.UsuarioDTO

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Animación del GIF corriendo */
    .gif-running {
        position: absolute;
        top: 0;
        left: 100%; /* inicia fuera de la derecha */
        width: 100px; /* ajusta tamaño del GIF */
        height: auto;
        z-index: 10;
        animation: run-login 4s linear infinite;
    }

    @@keyframes run-login {
        0%

    {
        left: 100%;
    }

    100% {
        left: -50px; /* termina fuera de la izquierda */
    }

    }

    .gif-container {
        position: relative; /* para que el GIF se posicione respecto a este contenedor */
        margin-bottom: 1rem;
        height: 30px; /* espacio suficiente para el GIF */
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-lg rounded-4 border-0 position-relative">
                <div class="card-body p-4 p-md-4">

                    <!-- GIF corriendo -->
                    <div class="gif-container">
                        <img src="~/imagenes/gif/gif3.gif" alt="Perrito corriendo" class="gif-running">
                    </div>

                    <h2 class="text-center mb-4 fw-bold text-primary">Iniciar Sesión</h2>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center rounded-3">
                            @ViewBag.Error
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label fw-semibold">Correo electrónico</label>
                            <input asp-for="Correo" class="form-control form-control-lg" placeholder="ejemplo@correo.com" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Contrasena" class="form-label fw-semibold">Contraseña</label>
                            <input asp-for="Contrasena" type="password" class="form-control form-control-lg" placeholder="********" />
                            <span asp-validation-for="Contrasena" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100 btn-lg mb-3">Ingresar</button>
                        <a href="@Url.Action("Registro", "PaginaPrincipal")" class="btn btn-warning w-100 btn-lg text-dark">Registrarse</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
