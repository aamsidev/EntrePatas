@model IEnumerable<EntrePatasWEB.Models.AnimalDTO>

@{
    ViewData["Title"] = "Listado de Animales";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Nuevo Animal
        </a>
    </div>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Usuario</th>
                <th>Nombre</th>
                <th>Especie</th>
                <th>Raza</th>
                <th>Edad</th>
                <th>Estado</th>
                <th>Fecha de Registro</th>
                <th>Foto</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdAnimal</td>
                    <td>@item.IdUsuario</td>
                    <td>@item.Nombre</td>
                    <td>@item.Especie</td>
                    <td>@item.Raza</td>
                    <td>@item.Edad</td>
                    <td>@item.Estado</td>
                    <td>@item.FechaRegistro.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Foto))
                        {
                            <img src="@item.Foto" alt="Foto de @item.Nombre" width="60" class="img-thumbnail" />
                        }
                        else
                        {
                            <span class="text-muted">Sin foto</span>
                        }
                    </td>
                    <td>@item.Descripcion</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.IdAnimal" class="btn btn-sm btn-primary" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdAnimal" class="btn btn-sm btn-info text-white" title="Detalles">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdAnimal" class="btn btn-sm btn-danger" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
