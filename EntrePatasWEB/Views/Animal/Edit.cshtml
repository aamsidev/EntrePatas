@model EntrePatasWEB.Models.AnimalDTO

@{
    ViewData["Title"] = "Editar Animal";
}

<div class="container mt-4" style="max-width: 480px;">
    <h1 class="mb-3">Editar Animal</h1>

    <form asp-action="Edit" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="IdAnimal" class="form-label"></label>
            <input asp-for="IdAnimal" class="form-control" readonly />
            <span asp-validation-for="IdAnimal" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IdUsuario" class="form-label"></label>
            <input asp-for="IdUsuario" class="form-control" readonly />
            <span asp-validation-for="IdUsuario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Especie" class="form-label"></label>
            <input asp-for="Especie" class="form-control" />
            <span asp-validation-for="Especie" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Raza" class="form-label"></label>
            <input asp-for="Raza" class="form-control" />
            <span asp-validation-for="Raza" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Edad" class="form-label"></label>
            <input asp-for="Edad" type="number" class="form-control" />
            <span asp-validation-for="Edad" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Estado" class="form-label"></label>
            <input asp-for="Estado" class="form-control" />
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FechaRegistro" class="form-label"></label>
            <input asp-for="FechaRegistro" type="date" class="form-control" />
            <span asp-validation-for="FechaRegistro" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Foto" class="form-label"></label>
            <input asp-for="Foto" class="form-control" />
            <span asp-validation-for="Foto" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label"></label>
            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
