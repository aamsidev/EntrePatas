@model EntrePatasWEB.Models.AnimalDTO

@{
    ViewData["Title"] = "Detalles del Animal";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg" style="max-width: 600px; width: 100%;">
        <div class="card-header text-center bg-primary text-white">
            <h3>@Model.Nombre</h3>
        </div>
        <div class="card-body text-center">
            <div class="mb-3">
                <img src="@Url.Content($"~/imagenes/animal/{(string.IsNullOrEmpty(Model.Foto) ? "default-animal.jpg" : Model.Foto)}")"
                     alt="Foto de @Model.Nombre"
                     class="img-fluid rounded shadow-sm"
                     style="max-height: 300px; object-fit: cover;" />
            </div>

            <ul class="list-group list-group-flush text-start">
                <li class="list-group-item"><strong>Especie:</strong> @Model.Especie</li>
                <li class="list-group-item"><strong>Raza:</strong> @Model.Raza</li>
                <li class="list-group-item"><strong>Edad:</strong> @Model.Edad años</li>
                <li class="list-group-item"><strong>Estado:</strong> @Model.Estado</li>
                <li class="list-group-item"><strong>Fecha de Registro:</strong> @Model.FechaRegistro.ToShortDateString()</li>
                <li class="list-group-item"><strong>Descripción:</strong> @Model.Descripcion</li>
            </ul>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Create", "Solicitud", new { idAnimal = Model.IdAnimal })" class="btn btn-primary">Adoptar</a>
            <a asp-controller="Animal" asp-action="Adopcion" class="btn btn-secondary btn-lg ms-2">Volver</a>
        </div>
    </div>
</div>
