@model EntrePatasWEB.Models.UsuarioDTO

@{
    ViewData["Title"] = "Editar Usuario";

    var tiposUsuario = new List<SelectListItem>
    {
        new SelectListItem { Value = "Cliente", Text = "Cliente" },
        new SelectListItem { Value = "Administrador", Text = "Administrador" }
    };
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Editar Usuario</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Apellido" class="form-label fw-semibold"></label>
                            <input asp-for="Apellido" class="form-control" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label fw-semibold"></label>
                            <input asp-for="Correo" type="email" class="form-control" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefono" class="form-label fw-semibold"></label>
                            <input asp-for="Telefono" class="form-control" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Direccion" class="form-label fw-semibold"></label>
                            <input asp-for="Direccion" class="form-control" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Contrasena" class="form-label fw-semibold"></label>
                            <input asp-for="Contrasena" type="text" class="form-control" value="@Model.Contrasena" />
                            <span asp-validation-for="Contrasena" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="TipoUsuario" class="form-label fw-semibold"></label>
                            <select asp-for="TipoUsuario" class="form-select" asp-items="tiposUsuario">
                                <option value="@Model.TipoUsuario"></option>
                            </select>
                            <span asp-validation-for="TipoUsuario" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-save2"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
