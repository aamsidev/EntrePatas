@model EntrePatasWEB.Models.UsuarioDTO

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">Detalles del Usuario</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">ID Usuario</dt>
                        <dd class="col-sm-8">@Model.IdUsuario</dd>

                        <dt class="col-sm-4 fw-semibold">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4 fw-semibold">Apellido</dt>
                        <dd class="col-sm-8">@Model.Apellido</dd>

                        <dt class="col-sm-4 fw-semibold">Correo</dt>
                        <dd class="col-sm-8">@Model.Correo</dd>

                        <dt class="col-sm-4 fw-semibold">Teléfono</dt>
                        <dd class="col-sm-8">@Model.Telefono</dd>

                        <dt class="col-sm-4 fw-semibold">Dirección</dt>
                        <dd class="col-sm-8">@Model.Direccion</dd>

                        <dt class="col-sm-4 fw-semibold">Contraseña</dt>
                        <dd class="col-sm-8">@Model.Contrasena</dd>

                        <dt class="col-sm-4 fw-semibold">Tipo de Usuario</dt>
                        <dd class="col-sm-8">@Model.TipoUsuario</dd>

                        <dt class="col-sm-4 fw-semibold">Fecha de Registro</dt>
                        <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>
