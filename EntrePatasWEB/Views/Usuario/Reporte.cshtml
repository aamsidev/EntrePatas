@model List<EntrePatasWEB.Models.UsuarioDTO>

<div class="container mt-4">
    <h2 class="mb-4">Reporte de Usuarios</h2>

    <form method="get" asp-action="Reporte" class="mb-4">
        <div class="row g-3">
            <div class="col-md-4">
                <label for="fechaInicio" class="form-label">📅 Fecha Inicio:</label>
                <input type="date" id="fechaInicio" name="fechaInicio" class="form-control" />
            </div>
            <div class="col-md-4">
                <label for="fechaFin" class="form-label">📅 Fecha Fin:</label>
                <input type="date" id="fechaFin" name="fechaFin" class="form-control" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <div class="btn-group w-100">
                    <button type="submit" class="btn btn-primary w-50">
                        <i class="bi bi-funnel-fill"></i> Filtrar
                    </button>
                    <button type="button" class="btn btn-success w-50" onclick="window.print()">
                        <i class="bi bi-printer-fill"></i> Imprimir
                    </button>
                </div>
            </div>
        </div>
    </form>

    <hr />

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Fecha Registro</th>
                        <th scope="col">Tipo Usuario</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td>@usuario.IdUsuario</td>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.Correo</td>
                            <td>@usuario.FechaRegistro.ToString("dd/MM/yyyy")</td>
                            <td>@usuario.TipoUsuario</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            No se encontraron usuarios en el rango de fechas seleccionado.
        </div>
    }
</div>
