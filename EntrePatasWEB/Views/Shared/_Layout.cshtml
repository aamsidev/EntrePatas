@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using Newtonsoft.Json

@{
    var carritoJson = HttpContextAccessor.HttpContext.Session.GetString("Carrito");
    var carrito = carritoJson != null
        ? JsonConvert.DeserializeObject<List<CarritoItem>>(carritoJson)
        : new List<CarritoItem>();

    var nombreUsuario = HttpContextAccessor.HttpContext.Session.GetString("NombreUsuario");
    var tipoUsuario = HttpContextAccessor.HttpContext.Session.GetString("TipoUsuario"); // Administrador o Cliente
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - EntrePatas</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="d-flex flex-column min-vh-100" style="margin:0; padding:0; background: linear-gradient(135deg, #d7f0d7, #a8e6a3);">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm position-relative"
         style="background: linear-gradient(90deg, #1e7a33, #14532d);  transition: all 0.3s ease-in-out;">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/" style="font-size:1.6rem; color:#fff;">
                <img src="~/imagenes/logo/logo1.png" alt="Logo EntrePatas" style="height:70px; width:auto; margin-right:0.5rem; transition: transform 0.3s;">
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/Home/Index"><i class="bi bi-house-door"></i> Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Animal/Adopcion"><i class="bi bi-heart"></i> Adopciones</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Producto/Catalogo"><i class="bi bi-bag"></i> Productos</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Contacto"><i class="bi bi-envelope"></i> Contacto</a></li>

                    @* Mostrar dropdown de administrador si el usuario es administrador *@
                    @if (!string.IsNullOrEmpty(tipoUsuario) && tipoUsuario == "Administrador")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-warning" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-gear"></i> Administración
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Admin/Index"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                <li><a class="dropdown-item" href="/Usuario/Index"><i class="bi bi-people"></i> Usuarios</a></li>
                                <li><a class="dropdown-item" href="/Animal/Index"><i class="bi bi-paw"></i> Animales</a></li>
                                <li><a class="dropdown-item" href="/Solicitud/Index"><i class="bi bi-file-text"></i> Solicitudes</a></li>
                                <li><a class="dropdown-item" href="/Admin/Index"><i class="bi bi-bar-chart-line"></i> Reportes</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item me-3">
                        <div id="miniCarritoContainer">
                            @await Html.PartialAsync("_MiniCarrito", carrito)
                        </div>
                    </li>
                    @if (!string.IsNullOrEmpty(nombreUsuario))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> @nombreUsuario
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Usuario/Perfil"><i class="bi bi-pencil-square"></i> Editar perfil</a></li>
                                <li><a class="dropdown-item" href="/Pedido/HistorialCliente"><i class="bi bi-pencil-square"></i> Pedidos</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item text-danger" href="/PaginaPrincipal/Logout"><i class="bi bi-box-arrow-right"></i> Cerrar sesión</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link btn-login" href="/PaginaPrincipal/Login">
                                <i class="bi bi-box-arrow-in-right"></i> Iniciar sesión
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <!-- GIF animado dentro del navbar -->
            <div class="gif-piso-container">
                <img src="~/imagenes/gif/gif5.gif" alt="Piso animado" class="gif-piso">
            </div>
        </div>
    </nav>

    <style>
        .navbar-brand img:hover {
            transform: scale(1.1);
        }

        .navbar-nav .nav-link {
            color: #e6f4ea;
            font-weight: 500;
            transition: color 0.3s, text-shadow 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #ffd700;
                text-shadow: 1px 1px 5px rgba(0,0,0,0.3);
            }

        .btn-login {
            background: #000;
            color: #fff;
            border-radius: 50px;
            padding: 0.35rem 1rem;
            transition: 0.3s ease;
        }

            .btn-login:hover {
                background: #28a745;
                color: #fff;
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
                transform: translateY(-2px);
            }

        .dropdown-menu li a:hover {
            background-color: #28a74533;
        }

        /* GIF animado dentro del navbar */
        .gif-piso-container {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 40px;
            overflow: hidden;
            pointer-events: none;
            z-index: 2000;
        }

            .gif-piso-container img {
                height: 40px;
                width: auto;
                animation: run-navbar 6s linear infinite;
            }
        @@keyframes run-navbar {
            0%

        {
            transform: translateX(-3100%);
        }

        100% {
            transform: translateX(3100%);
        }

        }
    </style>

    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="mt-5 pt-5 pb-3" style="background: linear-gradient(135deg, #1a1a1a, #212529); color:#cfd8dc; width:100%;">
        <div class="container-fluid px-5">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 style="color:#fff; font-weight:600;"><i class="bi bi-paw"></i> EntrePatas</h5>
                    <p>Adopta, cuida y ama. Somos tu clínica veterinaria y centro de adopciones de confianza.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 style="color:#fff; font-weight:600;">Enlaces útiles</h5>
                    <ul class="list-unstyled">
                        <li><a href="/Animal/Adopcion" style="color:#b2dfdb;"><i class="bi bi-heart"></i> Ver mascotas</a></li>
                        <li><a href="/Producto/Catalogo" style="color:#b2dfdb;"><i class="bi bi-bag"></i> Productos</a></li>
                        <li><a href="/Home/Contacto" style="color:#b2dfdb;"><i class="bi bi-telephone"></i> Contáctanos</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 style="color:#fff; font-weight:600;">Síguenos</h5>
                    <div>
                        <a href="#" style="color:#b2dfdb; font-size:1.2rem; margin-right:0.8rem;"><i class="bi bi-facebook"></i></a>
                        <a href="#" style="color:#b2dfdb; font-size:1.2rem; margin-right:0.8rem;"><i class="bi bi-instagram"></i></a>
                        <a href="#" style="color:#b2dfdb; font-size:1.2rem; margin-right:0.8rem;"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>
            </div>
            <hr style="background:#ccc;" />
            <p class="text-center mb-0">© @DateTime.Now.Year - EntrePatas. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function actualizarMiniCarrito() {
            $.get('/Carrito/MiniCarrito', function(html) {
                $('#miniCarritoContainer').html(html);
            });
        }
        $(document).on('click', '.btn-agregar-carrito', function(e) {
            e.preventDefault();
            $.get($(this).attr('href'), function() { actualizarMiniCarrito(); });
        });
        $(document).ready(function() { actualizarMiniCarrito(); });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
