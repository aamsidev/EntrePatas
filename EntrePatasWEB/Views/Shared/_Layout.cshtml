@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - EntrePatas</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome (íconos) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EntrePatasWEB.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- 🔝 Barra de navegación -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">🐾 EntrePatas</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Cliente/Index">Adopciones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Contacto">Contacto</a>
                    </li>
                </ul>

                <!-- 👤 Usuario logueado o login -->
                <ul class="navbar-nav ms-auto">
                    @if (HttpContextAccessor.HttpContext.Session.GetString("NombreUsuario") != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-light">Hola, @HttpContextAccessor.HttpContext.Session.GetString("NombreUsuario")</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/PaginaPrincipal/Logout">Cerrar sesión</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/PaginaPrincipal/Login">Iniciar sesión</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main class="flex-grow-1">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <!-- 🔚 Footer -->
    <footer class="bg-dark text-light pt-4 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>EntrePatas</h5>
                    <p>Adopta, cuida y ama. Somos tu clínica veterinaria y centro de adopciones de confianza.</p>
                </div>

                <div class="col-md-4">
                    <h5>Enlaces útiles</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-light text-decoration-none" href="/Cliente/Index">🐶 Ver mascotas</a></li>
                        <li><a class="text-light text-decoration-none" href="/Productos">🛒 Productos</a></li>
                        <li><a class="text-light text-decoration-none" href="/Contacto">📞 Contáctanos</a></li>
                    </ul>
                </div>

                <div class="col-md-4">
                    <h5>Síguenos</h5>
                    <a class="text-light me-2" href="#"><i class="fab fa-facebook fa-lg"></i></a>
                    <a class="text-light me-2" href="#"><i class="fab fa-instagram fa-lg"></i></a>
                    <a class="text-light me-2" href="#"><i class="fab fa-twitter fa-lg"></i></a>
                </div>
            </div>

            <hr class="bg-light" />
            <p class="text-center mb-0">© @DateTime.Now.Year - EntrePatas. Todos los derechos reservados.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

