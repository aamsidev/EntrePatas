@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - EntrePatas</title>

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<body class="d-flex flex-column min-vh-100" style="margin:0; padding:0;">

    
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm"
         style="background: linear-gradient(90deg, #2b7a2b, #28a745); box-shadow: 0 4px 15px rgba(0,0,0,0.15); transition: all 0.3s ease-in-out; width:100%;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/" style="font-size:1.6rem; letter-spacing:1px; color:#fff;">🐾 EntrePatas</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/" style="color:#e6f4ea;">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Cliente/Index" style="color:#e6f4ea;">Adopciones</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Contacto" style="color:#e6f4ea;">Contacto</a></li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (HttpContextAccessor.HttpContext.Session.GetString("NombreUsuario") != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-light">Hola, @HttpContextAccessor.HttpContext.Session.GetString("NombreUsuario")</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link ms-2" href="/PaginaPrincipal/Logout"
                               style="background:#000; color:#fff; border:none; border-radius:50px; padding:0.35rem 1rem; font-weight:500; transition:0.2s;">
                                Cerrar sesión
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/PaginaPrincipal/Login"
                               style="background:#000; color:#fff; border:none; border-radius:50px; padding:0.35rem 1rem; font-weight:500; transition:0.2s;">
                                Iniciar sesión
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    
    <main class="flex-grow-1">
        @RenderBody()
    </main>

    
    <footer class="mt-auto pt-5 pb-3"
            style="background: linear-gradient(135deg, #1a1a1a, #212529); color:#cfd8dc; width:100%;">
        <div class="container-fluid px-5">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 style="color:#fff; font-weight:600;">EntrePatas</h5>
                    <p>Adopta, cuida y ama. Somos tu clínica veterinaria y centro de adopciones de confianza.</p>
                </div>

                <div class="col-md-4 mb-3">
                    <h5 style="color:#fff; font-weight:600;">Enlaces útiles</h5>
                    <ul class="list-unstyled">
                        <li><a href="/Cliente/Index" style="color:#b2dfdb;">🐶 Ver mascotas</a></li>
                        <li><a href="/Productos" style="color:#b2dfdb;">🛒 Productos</a></li>
                        <li><a href="/Contacto" style="color:#b2dfdb;">📞 Contáctanos</a></li>
                    </ul>
                </div>

                <div class="col-md-4 mb-3">
                    <h5 style="color:#fff; font-weight:600;">Síguenos</h5>
                    <div>
                        <a href="#" style="color:#b2dfdb; font-size:1.2rem; margin-right:0.8rem;"><i class="fab fa-facebook"></i></a>
                        <a href="#" style="color:#b2dfdb; font-size:1.2rem; margin-right:0.8rem;"><i class="fab fa-instagram"></i></a>
                        <a href="#" style="color:#b2dfdb; font-size:1.2rem; margin-right:0.8rem;"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
            </div>

            <hr style="background:#ccc;" />
            <p class="text-center mb-0">© @DateTime.Now.Year - EntrePatas. Todos los derechos reservados.</p>
        </div>
    </footer>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
