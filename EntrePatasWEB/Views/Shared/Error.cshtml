@model ErrorViewModel
@{
    ViewData["Title"] = "Ups... algo salió mal";
}

<div class="d-flex flex-column align-items-center justify-content-center" style="min-height:70vh; text-align:center;">
    <h1 class="display-4 text-danger mb-3">¡Ups!</h1>
    <p class="lead mb-4">
        Parece que algo no salió como esperábamos.
    </p>

    <p class="text-muted mb-4">
        Puede que la página no exista, que no tengas permisos para acceder o que haya ocurrido un problema inesperado.
    </p>

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">
        Volver al inicio
    </a>

    @if (Model.ShowRequestId)
    {
        <p class="mt-4 text-muted small">
            <strong>Código de referencia:</strong> @Model.RequestId
        </p>
    }
</div>
