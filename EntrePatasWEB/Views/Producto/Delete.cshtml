@model EntrePatasWEB.Models.ProductoDTO

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-4">
    <h1 class="text-danger mb-3">Eliminar Producto</h1>

    <h4 class="text-muted">¿Estás seguro que quieres eliminar este producto?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IdProducto)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.IdProducto)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descripcion)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Precio)</dt>
        <dd class="col-sm-9">@String.Format("{0:C}", Model.Precio)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FotoUrl)</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.FotoUrl))
            {
                <img src="@Url.Content("~/imagenes/producto/" + Model.FotoUrl)" alt="Foto de @Model.Nombre" class="img-thumbnail" style="max-width:150px;" />
            }
            else
            {
                <span class="text-muted">Sin foto</span>
            }
        </dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Stock)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Stock)</dd>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="submit" value="Eliminar" class="btn btn-danger me-2" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
