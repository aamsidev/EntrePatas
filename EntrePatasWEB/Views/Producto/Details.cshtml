@model EntrePatasWEB.Models.ProductoDTO

@{
    ViewData["Title"] = "Detalle de Producto";
}

<div class="container my-5">
    <div class="row">
        <!-- Imagen del producto -->
        <div class="col-md-5 d-flex align-items-center justify-content-center">
            <img src="@Url.Content($"~/imagenes/producto/{(string.IsNullOrEmpty(Model.FotoUrl) ? "default-producto.jpg" : Model.FotoUrl)}")"
                 alt="@Model.Nombre"
                 class="img-fluid rounded shadow"
                 style="max-height: 400px; object-fit: cover;" />
        </div>

        <!-- Información del producto -->
        <div class="col-md-7">
            <h2 class="fw-bold">@Model.Nombre</h2>
            <p class="text-muted">@Model.Descripcion</p>

            <h3 class="text-success fw-bold">S/ @(Model.Precio.ToString("F2"))</h3>

            <p class="mt-3">
                <strong>Stock disponible:</strong>
                @if (Model.Stock > 0)
                {
                    <span class="badge bg-success">@Model.Stock unidades</span>
                }
                else
                {
                    <span class="badge bg-danger">Agotado</span>
                }
            </p>

            <div class="mt-4">
                <a asp-controller="Producto" asp-action="Catalogo" class="btn btn-outline-secondary me-2">
                    ← Volver al catálogo
                </a>

                @if (Model.Stock > 0)
                {
                    <a href="@Url.Action("Agregar", "Carrito", new { id = Model.IdProducto, nombre = Model.Nombre, precio = Model.Precio, fotoUrl = Model.FotoUrl })"
                       class="btn btn-success btn-agregar-carrito">
                        🛒 Agregar al carrito
                    </a>

                }
            </div>
        </div>
    </div>
</div>
