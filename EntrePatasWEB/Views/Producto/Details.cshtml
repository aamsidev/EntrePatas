@model EntrePatasWEB.Models.ProductoDTO

@{
    ViewData["Title"] = "Detalle de Producto";
}

<div class="container my-5">
    <div class="row">
        <!-- Imagen del producto -->
        <div class="col-md-5 d-flex align-items-center justify-content-center">
            <img src="@Url.Content($"~/imagenes/producto/{(string.IsNullOrEmpty(Model.FotoUrl) ? "default-producto.jpg" : Model.FotoUrl)}")"
                 alt="@Model.Nombre"
                 class="img-fluid rounded shadow"
                 style="max-height: 400px; object-fit: cover;" />
        </div>

        <!-- Información del producto -->
        <div class="col-md-7">
            <h2 class="fw-bold">@Model.Nombre</h2>
            <p class="text-muted">@Model.Descripcion</p>

            <h3 class="text-success fw-bold">S/ @(Model.Precio.ToString("F2"))</h3>

            <p class="mt-3">
                <strong>Stock disponible:</strong>
                @if (Model.Stock > 0)
                {
                    <span class="badge bg-success">@Model.Stock unidades</span>
                }
                else
                {
                    <span class="badge bg-danger">Agotado</span>
                }
            </p>

            <div class="mt-4">
                <a asp-controller="Producto" asp-action="Catalogo" class="btn btn-outline-secondary me-2">
                    ← Volver al catálogo
                </a>

                @if (Model.Stock > 0)
                {
                    <a href="@Url.Action("Agregar", "Carrito", new { id = Model.IdProducto, nombre = Model.Nombre, precio = Model.Precio, fotoUrl = Model.FotoUrl })"
                       class="btn btn-success btn-agregar-carrito"
                       onclick="return confirmarYMostrarToast(event);">
                        🛒 Agregar al carrito
                    </a>
                }
            </div>
        </div>
    </div>
</div>


<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050; min-width: 300px;">
    <div id="toastCarrito" class="toast align-items-center text-white bg-primary border-0 fade" role="alert" 
         style="font-size: 1.1rem; box-shadow: 0 0 15px rgba(0,0,0,0.5);" 
         data-bs-autohide="true" data-bs-delay="3000">
        <div class="d-flex">
            <div class="toast-body text-center">
                🛒 ¡Producto agregado al carrito!
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

<script>
function confirmarYMostrarToast(event) {

    if (!confirm("¿Deseas agregar este producto al carrito?")) {
        return false; 
    }

    event.preventDefault(); 

   
    var toastEl = document.getElementById('toastCarrito');
    var toast = new bootstrap.Toast(toastEl);
    toast.show();

 
    setTimeout(function() {
        window.location.href = event.currentTarget.href;
    }, 3000);

    return false;
}
</script>