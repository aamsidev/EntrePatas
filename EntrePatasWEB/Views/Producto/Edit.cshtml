@model EntrePatasWEB.Models.ProductoDTO

<form asp-action="Edit" asp-route-id="@Model.IdProducto" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="IdProducto" />
    <input type="hidden" asp-for="FotoUrl" /> <!-- Mantener la foto actual si no subes nueva -->

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
    </div>

    <div class="form-group">
        <label>Nueva Foto (opcional)</label>
        <input asp-for="FotoFile" type="file" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.FotoUrl))
        {
            <div class="mt-2">
                <span>Foto actual:</span><br />
                <img src="@Url.Content("~/imagenes/producto/" + Model.FotoUrl)" width="150" class="img-thumbnail" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
