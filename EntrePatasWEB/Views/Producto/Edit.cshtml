@model EntrePatasWEB.Models.ProductoDTO

<form asp-action="Edit" asp-route-id="@Model.IdProducto" method="post" enctype="multipart/form-data" class="container mt-4" style="max-width:600px;">
    <input type="hidden" asp-for="IdProducto" />
    <input type="hidden" asp-for="FotoUrl" /> <!-- Mantener la foto actual si no subes nueva -->

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" type="number" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Nueva Foto (opcional)</label>
        <input asp-for="FotoFile" type="file" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.FotoUrl))
        {
            <div class="mt-2">
                <span>Foto actual:</span><br />
                <img src="@Url.Content("~/imagenes/producto/" + Model.FotoUrl)" width="150" class="img-thumbnail" />
            </div>
        }
        <span asp-validation-for="FotoFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
