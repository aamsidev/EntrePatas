@model IEnumerable<EntrePatasWEB.Models.ProductoDTO>

@{
    ViewData["Title"] = "Productos";
}

<style>
    .img-producto {
        height: 220px;
        width: 100%;
        object-fit: cover;
        border-radius: 0.5rem 0.5rem 0 0;
        background-color: #f8f9fa;
    }

    .card-producto {
        min-height: 420px;
        display: flex;
        flex-direction: column;
    }

        .card-producto .card-body {
            flex-grow: 1;
        }
</style>

<

<!-- Contenedor dinámico donde se cargan los productos -->
<div class="row row-cols-1 row-cols-md-3 g-4">
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="col">
                <div class="card card-producto shadow-sm">
                    <img src="@Url.Content($"~/imagenes/producto/{(string.IsNullOrEmpty(item.FotoUrl) ? "default-producto.jpg" : item.FotoUrl)}")"
                         class="card-img-top img-producto"
                         alt="Imagen de @item.Nombre" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text">@item.Descripcion</p>
                        <p class="fw-bold text-success">S/ @(item.Precio.ToString("F2"))</p>
                        <p class="text-muted">Stock: @item.Stock</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="Producto" asp-action="Details" asp-route-id="@item.IdProducto"
                           class="btn btn-outline-primary btn-sm">
                            Ver detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col">
            <div class="alert alert-warning">No se encontraron productos.</div>
        </div>
    }
</div>

@section Scripts {
    <script>
        let timer;

        // Dispara la búsqueda automáticamente al escribir
        $(document).on("input", "#nombre, #precioMin, #precioMax", function () {
            clearTimeout(timer);
            timer = setTimeout(filtrarProductos, 300); // espera 300ms tras dejar de escribir
        });

        function filtrarProductos() {
            $.ajax({
                url: '@Url.Action("_ProductoFiltro", "Producto")',
                type: 'GET',
                data: $("#formFiltro").serialize(),
                success: function (resultado) {
                    $("#contenedorProductos").html(resultado);
                },
                error: function () {
                    alert("Error al aplicar el filtro.");
                }
            });
        }
    </script>
}
