@model EntrePatasWEB.Models.SolicitudDTO

@{
    ViewData["Title"] = "Editar Solicitud";

    var estados = new List<SelectListItem>
    {
        new SelectListItem { Value = "Pendiente", Text = "Pendiente" },
        new SelectListItem { Value = "Aprobada", Text = "Aprobada" },
        new SelectListItem { Value = "Rechazada", Text = "Rechazada" }
    };
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Editar Solicitud</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label fw-semibold"></label>
                            <select asp-for="Estado" class="form-select" asp-items="estados">
                                <option value="">-- Seleccione un estado --</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <input type="submit" value="Guardar" class="btn btn-success px-4" />
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
